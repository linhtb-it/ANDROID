<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/_10sdp"
    android:background="@color/colorItems">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:background="@color/colorIconBackground">

        <ImageView
            android:id="@+id/img_Avatar"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp" />

        <TextView
            android:id="@+id/tv_Time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@color/colorAppBar"
            android:fontFamily="@string/title_dashboard"
            android:textColor="@color/colorText"
            android:textSize="@dimen/_15sdp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_Avartar_Mini"
                android:scaleType="fitXY"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/border_radius_30dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/_10sdp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_Title"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp" />
                <TextView
                    android:id="@+id/tv_TimeCreate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10sdp"
                    android:textSize="@dimen/_8sdp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>